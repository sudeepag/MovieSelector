<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Login theme -->
    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- TextLayout Colors -->
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#ffc107</item>
        <item name="colorControlHighlight">#fff</item>
    </style>

    <!-- Registration theme -->
    <style name="AppTheme.Registration" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAlternate</item>
        <item name="colorPrimaryDark">@color/colorAlternateDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- TextLayout Colors -->
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#ffc107</item>
        <item name="colorControlHighlight">#fff</item>
    </style>

    <!-- Preference theme-->
    <style name="AppTheme.Preference" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorAccent">#009688</item>
    </style>

    <!-- Movie Details theme-->
    <style name="AppTheme.MovieDetails" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#FF5252</item>
        <item name="android:textColorPrimary">#FFffffff</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <!-- RatingBar themes-->
    <style name="RatingBar.Dialog" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFC107</item>
        <item name="colorControlActivated">#009688</item>
    </style>

    <style name="RatingBar.Details" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FF5252</item>
        <item name="colorControlActivated">#03A9F4</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
